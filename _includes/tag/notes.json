{% capture cache %}
  {% assign result = nil %}
  {% assign results = nil %}

  {% assign posts = site.posts | sort:'date' %}
  {% for post in posts %}
    {% capture date   %}"date":{{  post.date | split:' ' | first | jsonify }}{% endcapture %}
    {% capture tags   %}"tags":{{  post.tags                     | jsonify }}{% endcapture %}
    {% capture title  %}"title":{{ post.title | escape           | jsonify }}{% endcapture %}
    {% capture url    %}"url":{{   post.url                      | jsonify }}{% endcapture %}
    {% capture json   %}{% raw %}{{% endraw %}{{ date }},{{ tags }},{{ title }},{{ url }}{% raw %}}{% endraw %}{% endcapture %}
    {% capture results %}{{ json }}__SPLIT_JSON__{{ results }}{% endcapture %}
  {% endfor %}

  {% capture result %}[{{ results | split:'__SPLIT_JSON__' | join:',' }}]{% endcapture %}
{% endcapture %}{% assign cache = nil %}{{ result }}{% assign result = nil %}
