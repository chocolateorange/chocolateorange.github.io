{
  "private": true,
  "scripts": {
    "compile": "run-p -cln 'webpack-compile:*'",
    "develop": "run-p -cln 'webpack-develop:*'",
    "eslint": "eslint ./javascript",
    "minify": "run-p -cln 'webpack-minify:*'",
    "stylelint": "find ./css ./_sass -name '*.scss' | xargs -n 1 -I % bash -c 'grep -v ^---$ % | stylelint --stdin-filename $(basename %)'",
    "test": "npm run textlint",
    "textlint-fix": "npm run textlint -- --fix",
    "textlint": "textlint ./_drafts ./_posts",
    "webpack-compile:includes": "npm run webpack -- --config webpack.config.includes.coffee",
    "webpack-compile:scripts": "npm run webpack -- --config webpack.config.scripts.coffee",
    "webpack-develop:includes": "npm run webpack-compile:includes -- --watch",
    "webpack-develop:scripts": "npm run webpack-compile:scripts -- --devtool inline-source-map --watch",
    "webpack-minify:includes": "NODE_ENV=production npm run webpack-compile:includes -- --optimize-minimize",
    "webpack-minify:scripts": "NODE_ENV=production npm run webpack-compile:scripts -- --optimize-minimize",
    "webpack": "webpack --colors --display-error-details --progress --module-bind json"
  },
  "dependencies": {
    "domready": "^1.0.8",
    "lodash": "^4.15.0"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-lodash": "^3.2.8",
    "babel-plugin-transform-es3-member-expression-literals": "^6.8.0",
    "babel-plugin-transform-es3-property-literals": "^6.8.0",
    "babel-plugin-transform-strict-mode": "^6.11.3",
    "babel-plugin-transform-undefined-to-void": "^6.8.0",
    "babel-plugin-unassert": "^2.1.1",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-power-assert": "^1.0.0",
    "coffee-script": "^1.10.0",
    "eslint": "^3.14.0",
    "html-loader": "^0.4.4",
    "json-loader": "^0.5.4",
    "npm-run-all": "^3.1.1",
    "power-assert": "^1.4.2",
    "stylelint": "^7.7.1",
    "stylelint-config-standard": "^15.0.1",
    "textlint": "^7.1.4",
    "textlint-filter-rule-comments": "^1.2.1",
    "textlint-rule-preset-ja-technical-writing": "^1.0.0",
    "uglify-save-license": "^0.4.1",
    "webpack": "^1.13.2"
  }
}
